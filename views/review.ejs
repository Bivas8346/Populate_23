<%-include("layouts/head")%>
    <%-include("layouts/nav")%>
        <div class="container">
            <form action="/addreview" method="post">
                <div class="row">
                    <div class="col-md-4">
                        <label for="Movie">Select User:</label>
                        <select name="user" class="form-control">
                            <option disabled selected>Choose User</option>
                            <% for(let data1 of displayData1){ %>
                                <option value="<%= data1.id %>">
                                    <%= data1.Username %>
                                </option>
                                <% } %>
                        </select>
                    </div>
                    <div class="col-md-4">
                        <label for="Movie">Select Movie:</label>
                        <select name="movie" class="form-control">
                            <option disabled selected>Select Movie</option>
                            <% for(let data2 of displayData2){ %>
                                <option value="<%= data2.id %>">
                                    <%= data2.Moviename %>
                                </option>
                                <% } %>
                        </select>
                    </div>
                    <div class="col-md-4">
                        <label for="User Name">User Review:</label>
                        <input type="text" name="review" class="form-control">
                    </div>
                </div>
                <br />

                <button type="submit" class="btn btn-info btn-lg btn-block">Add</button>
            </form>
        </div>
        <%-include("layouts/footer")%>